# System maintenance
alias update="brew update && brew outdated && brew upgrade && brew cleanup"
alias reload="source ~/.zshrc"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# File listing (using eza - modern replacement for ls)
alias ls='eza -lX --color=always'
alias la='eza -laX --color=always'
alias ll='eza -lT --level 2'
alias lll='eza -lT --level 3'
alias lrt='eza -l --sort newest'
alias lart='eza -la --sort newest'

# SSH and security
SSH_KEY_PATH="${SSH_KEY_PATH:-$HOME/.ssh/draco.pub}"
alias pubkey="more \"$SSH_KEY_PATH\" | pbcopy | echo '=> Public key copied to pasteboard.'"

# Fzf integration
alias fzfp="fzf --style full --preview 'fzf-preview.sh {}' --bind 'focus:transform-header:file --brief {}'"

# History
alias h='fc -il 1'

# Enable aliases to be sudo'ed
alias sudo='sudo '

# Finder controls
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"

# System utilities
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias path='echo -e ${PATH//:/\\n}'

# Backup utility
alias backup='rsync -ahvP --exclude=".DS_Store"'

# Media conversion (if youtube-dl is available)
if command -v yt-dlp >/dev/null 2>&1; then
    alias mp4="yt-dlp -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4'"
    alias mp3="yt-dlp -x --audio-format mp3"
elif command -v youtube-dl >/dev/null 2>&1; then
    alias mp4="youtube-dl -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4'"
    alias mp3="youtube-dl -x --audio-format mp3"
fi

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline'

# Development shortcuts
alias python='python3'
alias pip='pip3'
